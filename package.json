{
  "name": "brm-rbac-fullstack",
  "version": "1.0.0",
  "description": "ระบบจัดการคำของบประมาณแบบ Role-Based Access Control (RBAC)",
  "main": "setup.js",
  "scripts": {
    "setup": "node setup.js",
    "install-all": "npm run setup",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:web\" \"npm run dev:web-js\"",
    "dev:server": "cd server-js && npm run dev",
    "dev:web": "cd web && npm run dev",
    "dev:web-js": "cd web-js && npm start",
    "start": "cd server-js && npm start",
    "test": "cd server-js && npm run test-api",
    "test:approval": "cd server-js && npm run test-approval",
    "reset-db": "cd server-js && npm run reset-db",
    "check-db": "cd server-js && npm run check-db",
    "git:status": "git status",
    "git:add": "git add .",
    "git:push": "git push origin main",
    "git:pull": "git pull origin main"
  },
  "keywords": [
    "budget",
    "rbac",
    "express",
    "react",
    "mysql",
    "javascript",
    "typescript"
  ],
